<%- include("partials/header.ejs") %>

    <body>


        <h1>Updating Author Data</h1>

        <div class="container">

        <form method="POST" action="/author/edit">
            <input type="hidden" name="authorId" value="<%=authorInfo[0].authorId%>">

            <label>First Name:</label>
            <input type="text" name="fName" value="<%=authorInfo[0].firstName%>">

            <label>Last Name:</label>
            <input type="text" name="lName" value="<%=authorInfo[0].lastName%>">

            <label>Date of Birth:</label>
            <input type="date" name="birthDate" value="<%=authorInfo[0].dobISO%>">

       
            <label>Date of Death:</label>
            <input type="date" name="deathDate" value="<%=authorInfo[0].dodISO%>">

        
            <label>Sex:</label>
            <div class="radio-group">
            <input type="radio" name="sex" value="M" 

                <% if(authorInfo[0].sex == "M") { %>
                    checked
                <% } %>

            >Male

            <input type="radio" name="sex" value="F" 

                <% if(authorInfo[0].sex == "F") { %>
                    checked
                <% } %>

            >Female
            </div>

            <!-- <option value="M" selected>Male</option>
            <option value="F" >Female</option> -->
            <label>Profession:</label>
            <input type="text" name="profession" value="<%=authorInfo[0].profession%>">

            <label>Country:</label>
            <input type="text" name="country" value="<%=authorInfo[0].country%>">

            <label>Portrait URL:</label>
            <input type="text" name="portrait" value="<%=authorInfo[0].portrait%>">

            <label>Biography:</label>
            <textarea name="biography" rows="4"><%=authorInfo[0].biography%></textarea>
            
            <button>Update Author</button>
        </form>

        <% if(typeof message != "undefined") {%>
            <div class="message">
                <%= message%>
            </div>
            
        <% } %>

        
    
        <a href="/authors" class="back-btn">‚Üê Back to Authors List</a>
</div>

        <%- include("partials/footer.ejs") %>
    
    </body>
</html>